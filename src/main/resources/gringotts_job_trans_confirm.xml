<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:batch="http://www.springframework.org/schema/batch"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.springframework.org/schema/batch http://www.springframework.org/schema/batch/spring-batch.xsd">

    <import resource="gringotts_job_repo.xml"></import>

    <batch:job id="gringottsJobTransConfirm" restartable="true" job-repository="gringottsJobRepository">
        <batch:step id="exportStep">
            <batch:tasklet>
                <batch:chunk reader="gringottsTransConfirmReader" processor="gringottsTransConfirmImportProcessor"
                             writer="gringottsTransConfirmImportWriter" commit-interval="3" chunk-completion-policy="">
                </batch:chunk>
            </batch:tasklet>
        </batch:step>
    </batch:job>

    <!--Readers-->
    <bean id="gringottsTransConfirmReader" class="org.springframework.batch.item.file.FlatFileItemReader">
        <property name="lineMapper" ref="gringottsTransConfirmReaderMapper">
        </property>
        <property name="linesToSkip" value="1"/>
        <property name="resource" value="file:d:/Github/Gringotts/files/trans_confirm.txt">
        </property>
    </bean>

    <bean id="gringottsTransConfirmReaderMapper" class="org.springframework.batch.item.file.mapping.DefaultLineMapper">
        <property name="lineTokenizer">
            <bean class="org.springframework.batch.item.file.transform.DelimitedLineTokenizer">
            </bean>
        </property>
        <property name="fieldSetMapper">
            <bean class="troywang.gringotts.file.mapper.TransConfirmMapper">
            </bean>
        </property>
    </bean>

    <!--Processors-->
    <bean id="gringottsTransConfirmImportProcessor"
          class="troywang.gringotts.biz.processor.TransConfirmImportProcessor">
    </bean>

    <!--Writers-->
    <bean id="gringottsTransConfirmImportWriter" class="troywang.gringotts.biz.writer.EmptyWriter">
    </bean>


</beans>